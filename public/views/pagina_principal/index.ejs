    <% if ( user != "" ) { %>
    
    <div class="container" style="border: 1px solid #000; margin-top: 30px;"> 
	
    <div class="row" style="margin-top: 10px;">
	
	<h1 class="col-md-6"> Lista de Usuários </h1>
	
	<a href="/adduser" class="col-md-6 btn btn-success btn-block btn-lg"> Adicionar Usuário </a> 

    </div>
    
	<br>
    
    <table class="table table-bordered table-sm">
         
		 <tr class="table-active">
            <td>Nome do Usuário</td>
            <td>E-mail do Usuário</td>
        </tr>
                                
        <% for(var i=0; i < user.length; i++) { %>
        <tr>
         <td><%= user[i].name %></td>
         <td><%= user[i].email %></td>
        </tr>
        <% } %>
		 
   </table>
        
   </div> 
    
   <% } %>
   
   
   <% if ( addUser != "" ) { %>
   
   
  <div class="row justify-content-center" style="margin-top: 10px; border: 1px solid #000;">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12">
            
			<h1> Cadastrar Usuário </h1>
			
            <div class="contact-from">
                <form action="/userPage" method="post">
                    <div class="form-group col-md-12">
                        <div class="row">
                            <div class="col-md-6">
                            <input type="text" name="name" class="form-control" id="name" placeholder="Digite seu nome" required />
                            </div>
                            <div class="col-md-6">
                                <input type="email" name="email" class="form-control" id="email" placeholder="Digite seu e-mail" required />
                            </div>
                        </div>
                    </div>
					<br>
                    <div class="form-group col-md-12" style="margin-bottom: 10px;">
                        <input type="password" name="password" class="form-control" id="password" placeholder="Digite seu senha" required>
                    </div>
					
					
					<% for(var i=0; i < addUser.length; i++) { %>
                   
                    <span style="color: <%= addUser[i].color %> ; margin-left: 2px;"><%= addUser[i].message %></span>
					
        
                    <% } %>
	
				  
				  <div class="container" style="margin-top: 5px;">
                   <div class="row">
                   <div class="col">
                   <button type="submit" class="btn btn-success form-control  btn-block">Enviar</button>
		          </div>
                   <div class="col">
                   <a href="/" class="btn btn-primary form-control btn-block">Ver lista de Usuários </a>	
                   </div>
                  </div>
					
					
                </form>
            </div>
            <!-- END CONTACT FROM -->
        </div>
    </div>
   
   
   <% } %>
    
    
</body>


</html>


